<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ t('title') }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      :root { --tile: 1.05rem; }
      .tile { font-size: var(--tile); }
      .bigbtn { padding: 1.25rem; border-radius: 1rem; }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="{{ url_for('home') }}">{{ t('title') }}</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto">
            <li class="nav-item"><a class="nav-link" href="{{ url_for('services') }}">{{ t('services') }}</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ url_for('schedule') }}">{{ t('schedule') }}</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ url_for('announcements') }}">{{ t('announcements') }}</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ url_for('report') }}">{{ t('report_issue') }}</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ url_for('fun') }}">{{ t('fun_zone') }}</a></li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <div class="btn-group">
                <a class="btn btn-outline-light btn-sm" href="{{ url_for('set_lang', code='en') }}">EN</a>
                <a class="btn btn-outline-light btn-sm" href="{{ url_for('set_lang', code='es') }}">ES</a>
              </div>
            </li>
            {% if session.get('is_admin') %}
              <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm" href="{{ url_for('admin') }}">{{ t('admin') }}</a></li>
              <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm" href="{{ url_for('logout') }}">{{ t('logout') }}</a></li>
            {% else %}
              <li class="nav-item ms-2"><a class="btn btn-outline-light btn-sm" href="{{ url_for('login') }}">{{ t('staff_login') }}</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
    <main class="container">
      {% with messages = get_flashed_messages(with_categories=True) %}
        {% if messages %}
          <div class="my-2">
            {% for cat, msg in messages %}
              <div class="alert alert-{{ cat }} mb-2">{{ msg }}</div>
            {% endfor %}
          </div>
        {% endif %}
      {% endwith %}
      {% block content %}{% endblock %}
    </main>
  </body>
</html>
